<%- include("../layouts/header.ejs") %>

<section class="h-100 gradient-form" style="background-color: #eee;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-xl-10">
          <div class="card rounded-3 text-black">
            <div class="row g-0">
              <div class="col-lg-12">
                <div class="card-body p-md-5 mx-md-4">
  
                  <div class="text-center">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/lotus.webp"
                      style="width: 185px;" alt="logo">
                    <h4 class="mt-1 mb-5 pb-1">We are The Lotus Team</h4>
                  </div>

                <%
                    if(typeof message !== "undefined"){
                %>
                    <p style="color: rgba(244, 4, 4, 0.932);"><%= message%></p>

                <% } %>
  
                  <form action="/admin/edituser" method="post">
                    <p>Edit user</p>
  
                    <div class="form-outline mb-4">
                      <input type="text" name="name" id="form2Example11" class="form-control"
                        placeholder="Name" value="<%= user.name %>" required/>
                      <label class="form-label" for="form2Example11">Username</label>
                    </div>
                    <div class="form-outline mb-4">
                        <input type="email" name="email" id="form2Example11" class="form-control"
                          placeholder="Email address" value="<%= user.email %>" required/>
                        <label class="form-label" for="form2Example11">Email</label>
                      </div>
                      <div class="form-outline mb-4">
                        <input type="tel" name="mobile" id="form2Example11" class="form-control"
                          placeholder="Mobile" value="<%= user.mobile %>" required/>
                        <label class="form-label" for="form2Example11">mobile</label>
                      </div>
                      <br>
                      <input type="hidden" name="id" value="<%= user._id %>">
  
  
                    <div class="text-center pt-1 mb-5 pb-1">
                        <input type="submit" value="Update user"><br>
                        <a href="/admin/admindashboard">GO Back</a>
                      
                    </div>
  
                  </form>
  
                </div>
              </div>
          </div>
        </div>
      </div>
    </div>
</section>

<%- include("../layouts/footer.ejs") %>
